root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[tests/**]
trim_trailing_whitespace = false

[tests/**.{rs,js}]
trim_trailing_whitespace = true
[tests/ui/{frontmatter/frontmatter-whitespace-3.rs,parser/shebang/shebang-space.rs}]
trim_trailing_whitespace = false

[src/llvm-project]
indent_style = unset
indent_size = unset

[*.rs]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab